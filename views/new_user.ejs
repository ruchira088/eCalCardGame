<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>New User</title>
    <% include templates/header.ejs %>
    <% include templates/notifications.ejs %>
</head>
<body>
<div id="newUser">
        <h1>
            New User
        </h1>
    <form method="post" id="userForm" role="form">
        <div class="form-group">
            <label>Profile picture</label>
            <input type="file" name="picture">
        </div>
        <div id="username" class="form-group">
            <label>Username:</label>
            <input onkeyup="checkUsername()" type="text" class="form-control" name="username">
            <div style="position: relative">
                <div id="usernameTaken">Username is already taken<img id="cross" src="/images/Cross.png"></div>
                <div id="usernameAvailable">Username is available<img id="tick" src="/images/Tick.png"></div>
            </div>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input id="password" onkeyup="confirmPassword()" type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input onkeyup="confirmPassword()" id="confirm" type="password" class="form-control">
            <div style="position: relative">
                <div id="passwordNoMatch">Passwords do not match<img id="cross" src="/images/Cross.png"></div>
                <div id="passwordMatch">Passwords match<img id="tick" src="/images/Tick.png"></div>
            </div>
        </div>
        <div class="form-group">
            <input onclick="validateAndSubmit($('form')[0])" type="button" class="form-control submitBtn" value="Create User">
        </div>
    </form>
</div>
<img id="leaves" src="/images/leaves.png">
</body>
</html>